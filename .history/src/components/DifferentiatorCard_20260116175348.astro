---
/**
 * DifferentiatorCard Component
 * A card component for displaying a single unique selling point/differentiator
 * with icon, title, and concise description.
 *
 * Features:
 * - Icon/visual element display with accent background
 * - Clear title for the differentiator
 * - Brief first-person description (1-2 sentences)
 * - Hover animations for enhanced interactivity
 * - Accessible with proper heading hierarchy
 * - Touch-friendly target sizes on mobile
 *
 * @example Basic usage
 * ```astro
 * <DifferentiatorCard
 *   id="local-expertise"
 *   title="Local Expertise"
 *   description="I live and work in west Houston, so I understand the local market."
 * />
 * ```
 *
 * @example With icon
 * ```astro
 * <DifferentiatorCard
 *   id="transparent-pricing"
 *   title="Transparent Pricing"
 *   description="You'll know exactly what you're paying for - no hidden fees or surprises."
 *   icon="<svg>...</svg>"
 * />
 * ```
 */

import type { DifferentiatorCardProps } from '../types/differentiator';

interface Props extends DifferentiatorCardProps {}

const {
  id,
  title,
  description,
  icon,
  class: className = '',
} = Astro.props;

// Build CSS classes
const cardClasses = [
  'differentiator-card',
  className,
].filter(Boolean).join(' ');
---

<article class={cardClasses} id={`differentiator-${id}`}>
  {icon && (
    <div class="differentiator-card__icon" aria-hidden="true">
      <Fragment set:html={icon} />
    </div>
  )}

  <div class="differentiator-card__content">
    <h3 class="differentiator-card__title">{title}</h3>
    <p class="differentiator-card__description">{description}</p>
  </div>
</article>

<style>
  /* =================================================================
   * DIFFERENTIATOR CARD COMPONENT STYLES
   * =================================================================
   * Uses design system variables from variables.css
   * Follows BEM naming convention for maintainability
   */

  .differentiator-card {
    /* Layout */
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--spacing-4);

    /* Box model */
    padding: var(--spacing-6);

    /* Visual */
    background-color: var(--color-background-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);

    /* Animation */
    transition:
      box-shadow var(--duration-200) var(--ease-in-out),
      transform var(--duration-200) var(--ease-in-out),
      border-color var(--duration-200) var(--ease-in-out);
  }

  .differentiator-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
    border-color: var(--color-primary-200);
  }

  /* Icon Container */
  .differentiator-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--spacing-16);
    height: var(--spacing-16);
    background-color: var(--color-primary-50);
    border-radius: var(--radius-full);
    color: var(--color-primary);
    transition:
      background-color var(--duration-200) var(--ease-in-out),
      transform var(--duration-200) var(--ease-in-out);
  }

  .differentiator-card:hover .differentiator-card__icon {
    background-color: var(--color-primary-100);
    transform: scale(1.08);
  }

  .differentiator-card__icon :global(svg) {
    width: var(--spacing-8);
    height: var(--spacing-8);
  }

  /* Content Area */
  .differentiator-card__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
    flex: 1;
  }

  .differentiator-card__title {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0;
    line-height: var(--line-height-tight);
  }

  .differentiator-card__description {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  /* =================================================================
   * RESPONSIVE STYLES
   * =================================================================
   */

  /* Tablet and up (768px) */
  @media screen and (min-width: 768px) {
    .differentiator-card {
      padding: var(--spacing-8);
      gap: var(--spacing-5);
    }

    .differentiator-card__icon {
      width: var(--spacing-20);
      height: var(--spacing-20);
    }

    .differentiator-card__icon :global(svg) {
      width: var(--spacing-10);
      height: var(--spacing-10);
    }

    .differentiator-card__title {
      font-size: var(--font-size-xl);
    }
  }

  /* =================================================================
   * REDUCED MOTION
   * Respect user preferences for reduced motion
   * =================================================================
   */
  @media (prefers-reduced-motion: reduce) {
    .differentiator-card,
    .differentiator-card__icon {
      transition: none;
    }

    .differentiator-card:hover {
      transform: none;
    }

    .differentiator-card:hover .differentiator-card__icon {
      transform: none;
    }
  }

  /* =================================================================
   * HIGH CONTRAST MODE
   * Windows High Contrast support
   * =================================================================
   */
  @media (forced-colors: active) {
    .differentiator-card {
      border: 2px solid CanvasText;
    }

    .differentiator-card__icon {
      border: 1px solid CanvasText;
    }
  }

  /* =================================================================
   * PRINT STYLES
   * =================================================================
   */
  @media print {
    .differentiator-card {
      box-shadow: none;
      border: 1px solid var(--color-border);
      break-inside: avoid;
      page-break-inside: avoid;
    }

    .differentiator-card:hover {
      transform: none;
      box-shadow: none;
    }
  }
</style>
