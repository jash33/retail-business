---

<Layout
	title="Houston Web Services"
	description="Professional web design and development services for small businesses in  Houston. Custom websites, SEO optimization, and digital solutions for the Energy Corridor, Katy, and Memorial areas."
	noTitleTemplate
	openGraph={{
		type: 'website',
	}}
	jsonLd={localBusinessSchema}
>
	<main>
		<!-- Hero Section -->
		<HeroSection
			headline="Grow Your Business Online"
			valueProposition="Your local partner for professional web solutions"
			subheadline="We help small businesses in the Energy Corridor, Katy, and Memorial areas stand out online with custom websites, SEO optimization, and digital marketing that drives real results."
			primaryCTA={{
				text: "Get Your Free Consultation",
				href: "/contact",
			}}
			secondaryCTA={{
				text: "View Our Services",
				href: "#services",
			}}
		/>

		<!-- Services Section -->
		<ServicesSection
			id="services"
			heading="Our Services"
			subheading="Comprehensive web solutions to help your Houston business thrive online. From design to optimization, we've got you covered."
			services={services}
			columns={4}
		/>

		<!-- Why Choose Us / Differentiators Section -->
		<DifferentiatorsSection
			id="why-choose-us"
			heading="Why Choose Us"
			subheading="Here's what sets us apart from other web service providers in the Houston area."
			differentiators={differentiators}
		/>

		<!-- Featured Projects Preview Section -->
		<FeaturedProjectsPreview
			id={FEATURED_PROJECTS_CONFIG.id}
			heading={FEATURED_PROJECTS_CONFIG.heading}
			subheading={FEATURED_PROJECTS_CONFIG.subheading}
			projects={FEATURED_PROJECTS}
			viewAllText={FEATURED_PROJECTS_CONFIG.viewAllText}
			viewAllHref={FEATURED_PROJECTS_CONFIG.viewAllHref}
		/>

		<!-- FAQ Section -->
		<FAQAccordion
			items={DEFAULT_FAQ_ITEMS}
			heading="Frequently Asked Questions"
			subheading="Find answers to common questions about our web design services, pricing, and process."
			allowMultiple={false}
			initialExpanded={null}
		/>

		<!-- Contact CTA Section -->
		<ContactCTA
			headline="Ready to Grow Your Business Online?"
			supportingText="Join dozens of successful  Houston businesses who trust us to build their digital presence. From the Energy Corridor to Katy and Memorial, we've helped local companies increase their online visibility and attract more customers. Let's discuss how we can help your business thrive."
			primaryCTA={{
				text: "Get Your Free Quote",
				href: "/contact",
			}}
			secondaryCTA={{
				text: "Call Us Today",
				href: "tel:+1-832-555-0123",
			}}
		/>
	</main>
</Layout>
