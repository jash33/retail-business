<Layout
  title="Portfolio"
  description="Browse our portfolio of web design and development projects for Houston businesses. See examples of our custom websites, e-commerce stores, and web applications."
  openGraph={{
    type: 'website',
  }}
  jsonLd={{
    type: 'CollectionPage',
    name: 'Houston Web Services Portfolio',
    description: 'Portfolio of web design and development projects for Houston businesses.',
    url: 'https://houstonwebservices.com/portfolio',
  }}
>
  <main>
    <!-- Portfolio Hero Section -->
    <section class="portfolio-hero">
      <div class="portfolio-hero__container">
        <h1 class="portfolio-hero__title">Our Work</h1>
        <p class="portfolio-hero__description">
          Explore our portfolio of custom web solutions. From small business websites to complex web applications,
          we've helped Houston businesses establish their online presence and grow their digital footprint.
        </p>
      </div>
    </section>

    <!-- Portfolio Grid Section -->
    <PortfolioSection
      heading="Featured Projects"
      subheading="Browse through our recent work to see the quality and diversity of our web development projects."
      projects={projects}
      columns={3}
      enableFiltering={true}
      showFeaturedFirst={true}
    />

    <!-- Contact CTA Section -->
    <ContactCTA
      headline="Ready to Start Your Project?"
      supportingText="Whether you need a simple website or a complex web application, we have the expertise to bring your vision to life. West Houston businesses trust us to deliver results that exceed expectations."
      primaryCTA={{
        text: "Start Your Project",
        href: "/contact",
      }}
      secondaryCTA={{
        text: "View Services & Pricing",
        href: "/services",
      }}
    />
  </main>
</Layout>

<style>
  /* =================================================================
   * PORTFOLIO HERO SECTION
   * ================================================================= */
  .portfolio-hero {
    padding: var(--spacing-20) var(--spacing-4) var(--spacing-16);
    background: linear-gradient(135deg, var(--color-primary-50) 0%, var(--color-background) 100%);
  }

  .portfolio-hero__container {
    max-width: var(--container-4xl);
    margin: 0 auto;
    text-align: center;
  }

  .portfolio-hero__title {
    font-family: var(--font-heading);
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-4);
    line-height: var(--line-height-tight);
  }

  .portfolio-hero__description {
    font-family: var(--font-body);
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 40rem;
    margin: 0 auto;
  }

  /* =================================================================
   * RESPONSIVE STYLES
   * ================================================================= */
  @media screen and (min-width: 768px) {
    .portfolio-hero {
      padding: var(--spacing-24) var(--spacing-8) var(--spacing-16);
    }

    .portfolio-hero__title {
      font-size: var(--font-size-5xl);
    }
  }

  /* =================================================================
   * PRINT STYLES
   * ================================================================= */
  @media print {
    .portfolio-hero {
      background: none;
      padding: var(--spacing-8) 0;
    }
  }
</style>
