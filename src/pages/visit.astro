---
/**
 * Visit/Location Page
 * A comprehensive page showcasing the business location with store hours,
 * address, photo gallery, parking information, neighborhood guide, and Google Maps.
 *
 * Features:
 * - LocalBusiness schema for enhanced SEO
 * - Interactive photo gallery with lightbox
 * - Store hours with special hours display
 * - Parking and transit information
 * - Neighborhood guide
 * - Embedded Google Maps with directions
 * - Full accessibility support
 */

import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import LocationGallery from '../components/LocationGallery.astro';
import GoogleMapsEmbed from '../components/GoogleMapsEmbed.astro';
import StoreHours from '../components/StoreHours.astro';
import { locationConfig } from '../config/location.config';

// Destructure location config for easier access
const {
  name,
  tagline,
  address,
  coordinates,
  phone,
  email,
  hours,
  specialHours,
  photos,
  parking,
  transit,
  neighborhood,
  googleMapsEmbedUrl,
  googleMapsDirectionsUrl,
  accessibility,
  amenities,
} = locationConfig;

// Format full address for display
const fullAddress = `${address.street}${address.street2 ? ', ' + address.street2 : ''}, ${address.city}, ${address.state} ${address.postalCode}`;

// Generate LocalBusiness JSON-LD schema
const localBusinessSchema = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  name: name,
  description: tagline,
  image: photos.length > 0 ? photos[0].src : undefined,
  telephone: phone,
  email: email,
  address: {
    '@type': 'PostalAddress',
    streetAddress: address.street + (address.street2 ? ', ' + address.street2 : ''),
    addressLocality: address.city,
    addressRegion: address.state,
    postalCode: address.postalCode,
    addressCountry: address.country,
  },
  geo: {
    '@type': 'GeoCoordinates',
    latitude: coordinates.lat,
    longitude: coordinates.lng,
  },
  url: Astro.site ? `${Astro.site}visit` : undefined,
  openingHoursSpecification: hours.filter(h => !h.isClosed).map(h => ({
    '@type': 'OpeningHoursSpecification',
    dayOfWeek: h.days,
    opens: h.open,
    closes: h.close,
  })),
  amenityFeature: amenities?.map(a => ({
    '@type': 'LocationFeatureSpecification',
    name: a,
    value: true,
  })),
  accessibilityFeature: accessibility,
};

// Parking type icons
const parkingIcons: Record<string, string> = {
  lot: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2"/><path d="M9 17V7h4a3 3 0 0 1 0 6H9"/></svg>`,
  street: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M4 12.5A2.5 2.5 0 0 1 6.5 10H20"/><path d="M4 5.5A2.5 2.5 0 0 1 6.5 3H20"/></svg>`,
  garage: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 21V8l9-6 9 6v13"/><path d="M9 21V14h6v7"/></svg>`,
  valet: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="8" r="5"/><path d="M20 21a8 8 0 1 0-16 0"/></svg>`,
};

// Transit type icons
const transitIcons: Record<string, string> = {
  metro: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="4" y="3" width="16" height="16" rx="2"/><path d="M4 11h16"/><path d="M12 3v8"/><circle cx="8" cy="15" r="1"/><circle cx="16" cy="15" r="1"/><path d="M8 19l-2 3"/><path d="M16 19l2 3"/></svg>`,
  bus: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 6v6"/><path d="M16 6v6"/><path d="M2 12h20"/><path d="M4 6h16a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2Z"/><circle cx="7" cy="17" r="1"/><circle cx="17" cy="17" r="1"/></svg>`,
  rail: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z"/><line x1="4" y1="22" x2="4" y2="15"/></svg>`,
  bike: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="5.5" cy="17.5" r="3.5"/><circle cx="18.5" cy="17.5" r="3.5"/><path d="M15 6a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-3 11.5V14l-3-3 4-3 2 3h2"/></svg>`,
  rideshare: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9L18 10H6l-2.5 1.1C2.7 11.3 2 12.1 2 13v3c0 .6.4 1 1 1h2"/><circle cx="7" cy="17" r="2"/><circle cx="17" cy="17" r="2"/></svg>`,
};

// Neighborhood type icons
const neighborhoodIcons: Record<string, string> = {
  Shopping: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>`,
  Recreation: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/><path d="m15 5 4 4"/></svg>`,
  Cafe: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 8h1a4 4 0 1 1 0 8h-1"/><path d="M3 8h14v9a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4Z"/><line x1="6" y1="2" x2="6" y2="4"/><line x1="10" y1="2" x2="10" y2="4"/><line x1="14" y1="2" x2="14" y2="4"/></svg>`,
  Nature: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22v-7l-2-2"/><path d="M17 8v.8A6 6 0 0 1 13.8 20v0H10v0A6.5 6.5 0 0 1 7 8h0a5 5 0 0 1 10 0Z"/><path d="m14 14-2 2"/></svg>`,
  Restaurant: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/></svg>`,
  default: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"/></svg>`,
};
---

<Layout
  title="Visit Us"
  description={`Visit ${name} at ${fullAddress}. View our store hours, parking information, and get directions.`}
  openGraph={{
    type: 'website',
  }}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
  </Fragment>

  <main>
    <!-- Hero Section -->
    <section class="visit-hero" aria-labelledby="visit-hero-heading">
      <div class="visit-hero__container">
        <span class="visit-hero__eyebrow reveal reveal--up">Visit Us</span>
        <h1 id="visit-hero-heading" class="visit-hero__title reveal reveal--up reveal--delay-1">
          Come See Us in Person
        </h1>
        <p class="visit-hero__subtitle reveal reveal--up reveal--delay-2">
          We'd love to see you! Stop by our store to browse, shop,
          or just to say hello. Here's everything you need to plan your visit.
        </p>
        <div class="visit-hero__cta reveal reveal--up reveal--delay-3">
          <Button
            text="Get Directions"
            href={googleMapsDirectionsUrl}
            variant="primary"
            size="large"
            external
          />
        </div>
      </div>
    </section>

    <!-- Quick Info Bar -->
    <section class="visit-quickinfo" aria-label="Quick contact information">
      <div class="visit-quickinfo__container">
        <div class="visit-quickinfo__grid">
          <!-- Address -->
          <div class="visit-quickinfo__item">
            <div class="visit-quickinfo__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div class="visit-quickinfo__content">
              <span class="visit-quickinfo__label">Address</span>
              <address class="visit-quickinfo__value">
                <a href={googleMapsDirectionsUrl} target="_blank" rel="noopener noreferrer">
                  {address.street}{address.street2 ? `, ${address.street2}` : ''}<br />
                  {address.city}, {address.state} {address.postalCode}
                </a>
              </address>
            </div>
          </div>

          <!-- Phone -->
          <div class="visit-quickinfo__item">
            <div class="visit-quickinfo__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <div class="visit-quickinfo__content">
              <span class="visit-quickinfo__label">Phone</span>
              <a href={`tel:${phone.replace(/[^0-9+]/g, '')}`} class="visit-quickinfo__value">
                {phone}
              </a>
            </div>
          </div>

          <!-- Email -->
          <div class="visit-quickinfo__item">
            <div class="visit-quickinfo__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <div class="visit-quickinfo__content">
              <span class="visit-quickinfo__label">Email</span>
              <a href={`mailto:${email}`} class="visit-quickinfo__value">
                {email}
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Store Hours Section -->
    <section class="visit-hours" aria-labelledby="visit-hours-heading">
      <div class="visit-hours__container">
        <div class="visit-hours__content">
          <div class="visit-hours__info reveal reveal--left">
            <h2 id="visit-hours-heading" class="visit-hours__title">
              Store Hours
            </h2>
            <p class="visit-hours__subtitle">
              We're here to help during the following hours.
              Walk-ins are always welcome â€” come shop with us anytime!
            </p>

            <!-- Store Hours Component with current day highlighting and status indicator -->
            <StoreHours
              hours={hours}
              specialHours={specialHours}
              showStatusIndicator={true}
              showSpecialHours={true}
            />

            <div class="visit-hours__cta">
              <Button
                text="Shop Online"
                href="/products"
                variant="secondary"
              />
            </div>
          </div>

          <!-- Map Preview -->
          <div class="visit-hours__map reveal reveal--right">
            <GoogleMapsEmbed
              embedUrl={googleMapsEmbedUrl}
              directionsUrl={googleMapsDirectionsUrl}
              locationName={name}
              address={fullAddress}
              coordinates={coordinates}
              height="400px"
              requireConsent={true}
              showDirections={true}
              showAddress={true}
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Photo Gallery Section -->
    <section class="visit-gallery" aria-labelledby="visit-gallery-heading">
      <div class="visit-gallery__container">
        <div class="visit-gallery__header reveal reveal--up">
          <h2 id="visit-gallery-heading" class="visit-gallery__title">
            Take a Look Around
          </h2>
          <p class="visit-gallery__subtitle">
            Get a preview of our store before you visit. From our welcoming
            entrance to our curated product displays, we've designed a shopping experience you'll enjoy.
          </p>
        </div>

        <div class="reveal reveal--up reveal--delay-1">
          <LocationGallery
            photos={photos}
            locationName={name}
          />
        </div>
      </div>
    </section>

    <!-- Parking & Transit Section -->
    <section class="visit-parking" aria-labelledby="visit-parking-heading">
      <div class="visit-parking__container">
        <div class="visit-parking__header reveal reveal--up">
          <h2 id="visit-parking-heading" class="visit-parking__title">
            Getting Here
          </h2>
          <p class="visit-parking__subtitle">
            Whether you're driving, taking transit, or using a rideshare,
            we've got you covered with convenient options.
          </p>
        </div>

        <div class="visit-parking__grid">
          <!-- Parking Options -->
          <div class="visit-parking__section reveal reveal--left">
            <h3 class="visit-parking__section-title">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <rect x="3" y="3" width="18" height="18" rx="2"/>
                <path d="M9 17V7h4a3 3 0 0 1 0 6H9"/>
              </svg>
              Parking
            </h3>
            <div class="visit-parking__options">
              {parking.map((option) => (
                <article class="visit-parking__card">
                  <div class="visit-parking__card-icon" aria-hidden="true" set:html={parkingIcons[option.type] || parkingIcons.lot} />
                  <div class="visit-parking__card-content">
                    <h4 class="visit-parking__card-title">{option.name}</h4>
                    <p class="visit-parking__card-details">{option.details}</p>
                    <div class="visit-parking__card-meta">
                      {option.cost && (
                        <span class="visit-parking__card-cost">
                          <strong>Cost:</strong> {option.cost}
                        </span>
                      )}
                      {option.distance && (
                        <span class="visit-parking__card-distance">
                          <strong>Distance:</strong> {option.distance}
                        </span>
                      )}
                    </div>
                    {option.notes && (
                      <p class="visit-parking__card-notes">{option.notes}</p>
                    )}
                  </div>
                </article>
              ))}
            </div>
          </div>

          <!-- Transit Options -->
          {transit && transit.length > 0 && (
            <div class="visit-parking__section reveal reveal--right">
              <h3 class="visit-parking__section-title">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M8 6v6"/>
                  <path d="M16 6v6"/>
                  <path d="M2 12h20"/>
                  <path d="M4 6h16a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2Z"/>
                </svg>
                Public Transit
              </h3>
              <div class="visit-parking__options">
                {transit.map((option) => (
                  <article class="visit-parking__card">
                    <div class="visit-parking__card-icon" aria-hidden="true" set:html={transitIcons[option.type] || transitIcons.bus} />
                    <div class="visit-parking__card-content">
                      <h4 class="visit-parking__card-title">{option.name}</h4>
                      {option.stop && (
                        <p class="visit-parking__card-details">
                          <strong>Stop:</strong> {option.stop}
                        </p>
                      )}
                      {option.details && (
                        <p class="visit-parking__card-details">{option.details}</p>
                      )}
                      {option.walkingDistance && (
                        <span class="visit-parking__card-distance">
                          <strong>Walking distance:</strong> {option.walkingDistance}
                        </span>
                      )}
                    </div>
                  </article>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- Accessibility & Amenities Section -->
    {(accessibility?.length || amenities?.length) && (
      <section class="visit-amenities" aria-labelledby="visit-amenities-heading">
        <div class="visit-amenities__container">
          <div class="visit-amenities__grid">
            {accessibility && accessibility.length > 0 && (
              <div class="visit-amenities__section reveal reveal--up">
                <h2 id="visit-amenities-heading" class="visit-amenities__title">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <circle cx="12" cy="12" r="10"/>
                    <circle cx="12" cy="7" r="1"/>
                    <path d="M9 12h6l-3 6"/>
                  </svg>
                  Accessibility
                </h2>
                <ul class="visit-amenities__list" role="list">
                  {accessibility.map((feature) => (
                    <li class="visit-amenities__item">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                        <polyline points="20 6 9 17 4 12"/>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {amenities && amenities.length > 0 && (
              <div class="visit-amenities__section reveal reveal--up reveal--delay-1">
                <h3 class="visit-amenities__title">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                    <path d="M2 17l10 5 10-5"/>
                    <path d="M2 12l10 5 10-5"/>
                  </svg>
                  Amenities
                </h3>
                <ul class="visit-amenities__list" role="list">
                  {amenities.map((amenity) => (
                    <li class="visit-amenities__item">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                        <polyline points="20 6 9 17 4 12"/>
                      </svg>
                      {amenity}
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>
      </section>
    )}

    <!-- Neighborhood Guide Section -->
    <section class="visit-neighborhood" aria-labelledby="visit-neighborhood-heading">
      <div class="visit-neighborhood__container">
        <div class="visit-neighborhood__header reveal reveal--up">
          <h2 id="visit-neighborhood-heading" class="visit-neighborhood__title">
            Explore the Neighborhood
          </h2>
          <p class="visit-neighborhood__subtitle">
            Our location is surrounded by great spots for shopping, dining,
            and recreation. Here are some of our favorites.
          </p>
        </div>

        <div class="visit-neighborhood__grid">
          {neighborhood.map((place, index) => (
            <article class={`visit-neighborhood__card reveal reveal--up reveal--delay-${(index % 4) + 1}`}>
              <div class="visit-neighborhood__card-icon" aria-hidden="true" set:html={neighborhoodIcons[place.type] || neighborhoodIcons.default} />
              <div class="visit-neighborhood__card-content">
                <span class="visit-neighborhood__card-type">{place.type}</span>
                <h3 class="visit-neighborhood__card-title">
                  {place.link ? (
                    <a href={place.link} target="_blank" rel="noopener noreferrer">
                      {place.name}
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" class="visit-neighborhood__external-icon">
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                        <polyline points="15 3 21 3 21 9"/>
                        <line x1="10" y1="14" x2="21" y2="3"/>
                      </svg>
                    </a>
                  ) : (
                    place.name
                  )}
                </h3>
                <p class="visit-neighborhood__card-description">{place.description}</p>
                {place.distance && (
                  <span class="visit-neighborhood__card-distance">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="12 6 12 12 16 14"/>
                    </svg>
                    {place.distance}
                  </span>
                )}
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="visit-cta" aria-labelledby="visit-cta-heading">
      <div class="visit-cta__container">
        <h2 id="visit-cta-heading" class="visit-cta__title reveal reveal--up">
          Ready to Visit?
        </h2>
        <p class="visit-cta__description reveal reveal--up reveal--delay-1">
          We can't wait to see you! Stop by our store to browse and shop
          during business hours. We'll have everything ready for you.
        </p>
        <div class="visit-cta__buttons reveal reveal--up reveal--delay-2">
          <Button
            text="Browse Our Products"
            href="/products"
            variant="primary"
            size="large"
          />
          <Button
            text="Get Directions"
            href={googleMapsDirectionsUrl}
            variant="secondary"
            size="large"
            external
          />
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* =================================================================
   * HERO SECTION
   * ================================================================= */
  .visit-hero {
    padding: var(--spacing-20) var(--spacing-4) var(--spacing-12);
    background: linear-gradient(
      135deg,
      var(--color-primary-50) 0%,
      var(--color-background) 100%
    );
    text-align: center;
  }

  .visit-hero__container {
    max-width: var(--container-4xl);
    margin: 0 auto;
  }

  .visit-hero__eyebrow {
    display: inline-block;
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wider);
    margin-bottom: var(--spacing-4);
  }

  .visit-hero__title {
    font-family: var(--font-heading);
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-4);
    line-height: var(--line-height-tight);
    letter-spacing: var(--letter-spacing-tight);
  }

  .visit-hero__subtitle {
    font-family: var(--font-body);
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    max-width: 36rem;
    margin: 0 auto var(--spacing-8);
    line-height: var(--line-height-relaxed);
