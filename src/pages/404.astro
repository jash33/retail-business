---
/**
 * Custom 404 Error Page
 * User-friendly error page for broken or non-existent URLs.
 *
 * Features:
 * - Consistent site branding (logo, colors, typography, header/footer)
 * - Clear, friendly messaging without technical jargon
 * - Prominent navigation links to key pages
 * - Working search bar to help users find content
 * - SEO-friendly elements (proper meta tags, heading structure)
 * - Helpful suggestions and popular pages
 * - Responsive design (mobile, tablet, desktop)
 * - Analytics tracking for 404 errors
 * - Contextual help based on attempted URL patterns
 */

import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import { trackEvent } from '../utils/analytics';

// Get the current URL path for analytics and contextual suggestions
const currentPath = Astro.url.pathname;
const searchParams = Astro.url.searchParams;
// Note: referrer is tracked client-side since this is a statically generated page

// Navigation links for quick access
const quickLinks = [
  { href: '/', label: 'Homepage', description: 'Return to our main page' },
  { href: '/products', label: 'Shop Products', description: 'Browse our full collection' },
  { href: '/brand-story', label: 'Our Story', description: 'Learn about our brand and mission' },
  { href: '/visit', label: 'Visit Us', description: 'Find our store location and hours' },
  { href: '/contact', label: 'Contact Us', description: 'Get in touch with our team' },
];

// Popular/suggested pages
const popularPages = [
  { href: '/products', label: 'Shop All Products' },
  { href: '/brand-story', label: 'Our Brand Story' },
  { href: '/blog', label: 'Latest Blog Posts' },
  { href: '/shipping-returns', label: 'Shipping & Returns' },
];

// Helper function to get contextual suggestions based on URL pattern
function getContextualSuggestion(path: string): { message: string; suggestedLink?: { href: string; label: string } } | null {
  const pathLower = path.toLowerCase();

  // Check for common URL patterns and provide helpful suggestions
  if (pathLower.includes('product') || pathLower.includes('shop') || pathLower.includes('collection') || pathLower.includes('item') || pathLower.includes('catalog')) {
    return {
      message: 'Looking for our products?',
      suggestedLink: { href: '/products', label: 'Browse Our Collection' }
    };
  }

  if (pathLower.includes('shipping') || pathLower.includes('return') || pathLower.includes('delivery') || pathLower.includes('order')) {
    return {
      message: 'Need shipping or returns info?',
      suggestedLink: { href: '/shipping-returns', label: 'Shipping & Returns Policy' }
    };
  }

  if (pathLower.includes('contact') || pathLower.includes('support') || pathLower.includes('help') || pathLower.includes('email')) {
    return {
      message: 'Need to get in touch?',
      suggestedLink: { href: '/contact', label: 'Contact Us' }
    };
  }

  if (pathLower.includes('about') || pathLower.includes('story') || pathLower.includes('brand') || pathLower.includes('who')) {
    return {
      message: 'Want to learn more about us?',
      suggestedLink: { href: '/brand-story', label: 'Our Brand Story' }
    };
  }

  if (pathLower.includes('visit') || pathLower.includes('store') || pathLower.includes('location') || pathLower.includes('hours') || pathLower.includes('direction')) {
    return {
      message: 'Looking for our store?',
      suggestedLink: { href: '/visit', label: 'Visit Our Store' }
    };
  }

  if (pathLower.includes('blog') || pathLower.includes('article') || pathLower.includes('news') || pathLower.includes('post')) {
    return {
      message: 'Looking for articles or news?',
      suggestedLink: { href: '/blog', label: 'Read Our Blog' }
    };
  }

  return null;
}

const contextualSuggestion = getContextualSuggestion(currentPath);

// Decode URL for display (handle special characters)
let displayPath = currentPath;
try {
  displayPath = decodeURIComponent(currentPath);
} catch {
  // Keep original if decoding fails (malformed URL)
  displayPath = currentPath;
}

// SVG Icons
const icons = {
  search: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20" aria-hidden="true"><path fill-rule="evenodd" d="M10.5 3.75a6.75 6.75 0 100 13.5 6.75 6.75 0 000-13.5zM2.25 10.5a8.25 8.25 0 1114.59 5.28l4.69 4.69a.75.75 0 11-1.06 1.06l-4.69-4.69A8.25 8.25 0 012.25 10.5z" clip-rule="evenodd" /></svg>`,
  home: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20" aria-hidden="true"><path d="M11.47 3.84a.75.75 0 011.06 0l8.69 8.69a.75.75 0 101.06-1.06l-8.689-8.69a2.25 2.25 0 00-3.182 0l-8.69 8.69a.75.75 0 001.061 1.06l8.69-8.69z" /><path d="M12 5.432l8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 01-.75-.75v-4.5a.75.75 0 00-.75-.75h-3a.75.75 0 00-.75.75V21a.75.75 0 01-.75.75H5.625a1.875 1.875 0 01-1.875-1.875v-6.198a2.29 2.29 0 00.091-.086L12 5.43z" /></svg>`,
  arrowRight: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="16" height="16" aria-hidden="true"><path fill-rule="evenodd" d="M12.97 3.97a.75.75 0 011.06 0l7.5 7.5a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 11-1.06-1.06l6.22-6.22H3a.75.75 0 010-1.5h16.19l-6.22-6.22a.75.75 0 010-1.06z" clip-rule="evenodd" /></svg>`,
};
---

<Layout
  title="Page Not Found"
  description="The page you're looking for doesn't exist or has been moved. Find your way back with our helpful navigation options."
  robots="noindex, nofollow"
>
  <main class="error-page" id="error-content">
    <div class="error-page__container">
      <!-- Error Code Visual -->
      <div class="error-page__visual" aria-hidden="true">
        <span class="error-page__code">404</span>
        <div class="error-page__decoration">
          <div class="error-page__circle error-page__circle--1"></div>
          <div class="error-page__circle error-page__circle--2"></div>
          <div class="error-page__circle error-page__circle--3"></div>
        </div>
      </div>

      <!-- Error Message -->
      <div class="error-page__content">
        <h1 class="error-page__heading">Page Not Found</h1>
        <p class="error-page__message">
          Sorry, we couldn't find the page you were looking for. It may have been moved, renamed, or doesn't exist.
        </p>

        <!-- Display the attempted URL (sanitized) -->
        {displayPath && displayPath !== '/' && (
          <p class="error-page__url">
            <span class="error-page__url-label">Requested URL:</span>
            <code class="error-page__url-path">{displayPath}</code>
          </p>
        )}

        <!-- Contextual Suggestion (if available) -->
        {contextualSuggestion && (
          <div class="error-page__suggestion">
            <p class="error-page__suggestion-text">{contextualSuggestion.message}</p>
            {contextualSuggestion.suggestedLink && (
              <a href={contextualSuggestion.suggestedLink.href} class="error-page__suggestion-link">
                {contextualSuggestion.suggestedLink.label}
                <Fragment set:html={icons.arrowRight} />
              </a>
            )}
          </div>
        )}

        <!-- Primary CTAs -->
        <div class="error-page__actions">
          <Button
            text="Go to Homepage"
            href="/"
            variant="primary"
            size="large"
          >
            <Fragment slot="icon" set:html={icons.home} />
          </Button>
          <Button
            text="Contact Support"
            href="/contact"
            variant="secondary"
            size="large"
          />
        </div>
      </div>

      <!-- Search Section -->
      <section class="error-page__search-section" aria-labelledby="search-heading">
        <h2 id="search-heading" class="error-page__section-heading">Search Our Site</h2>
        <form
          class="error-page__search-form"
          action="https://www.google.com/search"
          method="get"
          target="_blank"
          rel="noopener noreferrer"
          role="search"
          aria-label="Search Houston Web Services"
        >
          <!-- Hidden field to restrict search to this site -->
          <input type="hidden" name="sitesearch" value="houstonwebservices.com" />
          <input type="hidden" name="as_sitesearch" value="houstonwebservices.com" />

          <div class="error-page__search-wrapper">
            <label for="search-input" class="sr-only">Search</label>
            <input
              type="search"
              id="search-input"
              name="q"
              class="error-page__search-input"
              placeholder="Search for products, pages..."
              autocomplete="off"
              aria-describedby="search-hint"
            />
            <button type="submit" class="error-page__search-button" aria-label="Submit search">
              <Fragment set:html={icons.search} />
            </button>
          </div>
          <p id="search-hint" class="error-page__search-hint">
            Search opens in a new tab using Google site search
          </p>
        </form>
      </section>

      <!-- Quick Links Section -->
      <section class="error-page__links-section" aria-labelledby="links-heading">
        <h2 id="links-heading" class="error-page__section-heading">Quick Links</h2>
        <nav class="error-page__links-nav" aria-label="Quick navigation links">
          <ul class="error-page__links-list" role="list">
            {quickLinks.map((link) => (
              <li class="error-page__links-item">
                <a href={link.href} class="error-page__link">
                  <span class="error-page__link-label">{link.label}</span>
                  <span class="error-page__link-description">{link.description}</span>
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </section>

      <!-- Popular Pages Section -->
      <section class="error-page__popular-section" aria-labelledby="popular-heading">
        <h2 id="popular-heading" class="error-page__section-heading">Popular Pages</h2>
        <ul class="error-page__popular-list" role="list">
          {popularPages.map((page) => (
            <li class="error-page__popular-item">
              <a href={page.href} class="error-page__popular-link">
                <Fragment set:html={icons.arrowRight} />
                {page.label}
              </a>
            </li>
          ))}
        </ul>
      </section>

      <!-- Help Text -->
      <div class="error-page__help">
        <p class="error-page__help-text">
          Still can't find what you're looking for?
          <a href="/contact" class="error-page__help-link">Contact us</a> and we'll help you find it.
        </p>
      </div>
    </div>
  </main>

  <!-- Analytics tracking script -->
  <script>
    // Track 404 error when page loads
    document.addEventListener('DOMContentLoaded', function() {
      // Check if gtag is available
      if (typeof window.gtag === 'function') {
        // Track 404 error event with client-side values
        window.gtag('event', 'page_not_found', {
          page_path: window.location.pathname,
          page_referrer: document.referrer || '',
          page_title: document.title,
          page_location: window.location.href
        });
      }

      // Also log to console in development for debugging
      if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
        console.log('[404 Tracking] Page not found:', {
          path: window.location.pathname,
          referrer: document.referrer,
          url: window.location.href
        });
      }
    });
  </script>
</Layout>

<style>
  /* =================================================================
   * 404 ERROR PAGE STYLES
   * =================================================================
   * Uses design system variables from variables.css
   * Follows BEM naming convention
   */

  .error-page {
    background-color: var(--color-background-subtle);
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-8) var(--spacing-4);
  }

  .error-page__container {
    max-width: var(--container-3xl);
    width: 100%;
    margin: 0 auto;
    text-align: center;
  }

  /* -----------------------------------------------------------------
   * Error Visual Section
   * ----------------------------------------------------------------- */

  .error-page__visual {
    position: relative;
    margin-bottom: var(--spacing-8);
  }

  .error-page__code {
    font-family: var(--font-heading);
    font-size: clamp(6rem, 20vw, 12rem);
    font-weight: var(--font-weight-extrabold);
    color: var(--color-primary-100);
    line-height: 1;
    letter-spacing: var(--letter-spacing-tight);
    display: block;
    user-select: none;
  }

