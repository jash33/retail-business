    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  .error-page__circle {
    position: absolute;
    border-radius: var(--radius-full);
    border: 2px solid var(--color-primary-200);
    opacity: 0.5;
  }

  .error-page__circle--1 {
    width: 60%;
    height: 100%;
  }

  .error-page__circle--2 {
    width: 80%;
    height: 130%;
    border-style: dashed;
  }

  .error-page__circle--3 {
    width: 100%;
    height: 160%;
    border-style: dotted;
    opacity: 0.3;
  }

  /* -----------------------------------------------------------------
   * Content Section
   * ----------------------------------------------------------------- */

  .error-page__content {
    margin-bottom: var(--spacing-12);
  }

  .error-page__heading {
    font-family: var(--font-heading);
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-4);
    line-height: var(--line-height-tight);
  }

  .error-page__message {
    font-family: var(--font-body);
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin: 0 0 var(--spacing-4);
    max-width: 36rem;
    margin-left: auto;
    margin-right: auto;
    line-height: var(--line-height-relaxed);
  }

  .error-page__url {
    font-size: var(--font-size-sm);
    color: var(--color-text-tertiary);
    margin: 0 0 var(--spacing-6);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-1);
  }

  .error-page__url-label {
    font-weight: var(--font-weight-medium);
  }

  .error-page__url-path {
    font-family: var(--font-mono);
    font-size: var(--font-size-sm);
    background-color: var(--color-background-muted);
    padding: var(--spacing-1) var(--spacing-3);
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    word-break: break-all;
    max-width: 100%;
    display: inline-block;
  }

  /* -----------------------------------------------------------------
   * Contextual Suggestion
   * ----------------------------------------------------------------- */

  .error-page__suggestion {
    background-color: var(--color-primary-50);
    border: 1px solid var(--color-primary-100);
    border-radius: var(--radius-xl);
    padding: var(--spacing-4) var(--spacing-6);
    margin: 0 auto var(--spacing-6);
    max-width: 24rem;
  }

  .error-page__suggestion-text {
    font-size: var(--font-size-base);
    color: var(--color-primary-700);
    font-weight: var(--font-weight-medium);
    margin: 0 0 var(--spacing-2);
  }

  .error-page__suggestion-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    color: var(--color-primary);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    transition: color var(--duration-150) var(--ease-in-out);
  }

  .error-page__suggestion-link:hover {
    color: var(--color-primary-hover);
    text-decoration: underline;
  }

  .error-page__suggestion-link:focus-visible {
    outline: var(--focus-ring-width) solid var(--focus-ring-color);
    outline-offset: var(--focus-ring-offset);
    border-radius: var(--radius-sm);
  }

  .error-page__suggestion-link :global(svg) {
    transition: transform var(--duration-150) var(--ease-in-out);
  }

  .error-page__suggestion-link:hover :global(svg) {
    transform: translateX(4px);
  }

  /* -----------------------------------------------------------------
   * Action Buttons
   * ----------------------------------------------------------------- */

  .error-page__actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
    align-items: center;
    margin-top: var(--spacing-6);
  }

  /* -----------------------------------------------------------------
   * Search Section
   * ----------------------------------------------------------------- */

  .error-page__search-section {
    background-color: var(--color-background);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-6);
    margin-bottom: var(--spacing-8);
    box-shadow: var(--shadow-sm);
  }

  .error-page__section-heading {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-4);
  }

  .error-page__search-form {
    max-width: 28rem;
    margin: 0 auto;
  }

  .error-page__search-wrapper {
    display: flex;
    gap: var(--spacing-2);
    position: relative;
  }

  .error-page__search-input {
    flex: 1;
    padding: var(--spacing-3) var(--spacing-4);
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    color: var(--color-text-primary);
    background-color: var(--color-background);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: border-color var(--duration-150) var(--ease-in-out),
                box-shadow var(--duration-150) var(--ease-in-out);
  }

  .error-page__search-input::placeholder {
    color: var(--color-text-placeholder);
  }

  .error-page__search-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px var(--color-primary-50);
  }

  .error-page__search-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background-color: var(--color-primary);
    color: var(--color-text-inverse);
    border: none;
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: background-color var(--duration-150) var(--ease-in-out),
                transform var(--duration-150) var(--ease-in-out);
  }

  .error-page__search-button:hover {
    background-color: var(--color-primary-hover);
  }

  .error-page__search-button:active {
    transform: scale(0.95);
  }

  .error-page__search-button:focus-visible {
    outline: var(--focus-ring-width) solid var(--focus-ring-color);
    outline-offset: var(--focus-ring-offset);
  }

  .error-page__search-hint {
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
    margin: var(--spacing-2) 0 0;
  }

  /* -----------------------------------------------------------------
   * Quick Links Section
   * ----------------------------------------------------------------- */

  .error-page__links-section {
    margin-bottom: var(--spacing-8);
  }

  .error-page__links-list {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-3);
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
  }

  .error-page__link {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
    padding: var(--spacing-4);
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-decoration: none;
    transition: border-color var(--duration-150) var(--ease-in-out),
                box-shadow var(--duration-150) var(--ease-in-out),
                transform var(--duration-150) var(--ease-in-out);
  }

  .error-page__link:hover {
    border-color: var(--color-primary-200);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .error-page__link:focus-visible {
    outline: var(--focus-ring-width) solid var(--focus-ring-color);
    outline-offset: var(--focus-ring-offset);
  }

  .error-page__link-label {
    font-family: var(--font-heading);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--color-primary);
  }

  .error-page__link-description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  /* -----------------------------------------------------------------
   * Popular Pages Section
   * ----------------------------------------------------------------- */

  .error-page__popular-section {
    margin-bottom: var(--spacing-8);
  }

  .error-page__popular-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-3);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .error-page__popular-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-4);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-primary);
    background-color: var(--color-primary-50);
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: background-color var(--duration-150) var(--ease-in-out),
                color var(--duration-150) var(--ease-in-out);
  }

  .error-page__popular-link:hover {
    background-color: var(--color-primary-100);
    color: var(--color-primary-700);
  }

  .error-page__popular-link:focus-visible {
    outline: var(--focus-ring-width) solid var(--focus-ring-color);
    outline-offset: var(--focus-ring-offset);
  }

  .error-page__popular-link :global(svg) {
    opacity: 0.7;
    transition: transform var(--duration-150) var(--ease-in-out);
  }

  .error-page__popular-link:hover :global(svg) {
    transform: translateX(2px);
  }

  /* -----------------------------------------------------------------
   * Help Section
   * ----------------------------------------------------------------- */

  .error-page__help {
    background-color: var(--color-background);
    border-radius: var(--radius-xl);
    padding: var(--spacing-4) var(--spacing-6);
    border: 1px dashed var(--color-border-dark);
  }

  .error-page__help-text {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .error-page__help-link {
    color: var(--color-primary);
    font-weight: var(--font-weight-medium);
    text-decoration: none;
  }

  .error-page__help-link:hover {
    text-decoration: underline;
  }

  .error-page__help-link:focus-visible {
    outline: var(--focus-ring-width) solid var(--focus-ring-color);
    outline-offset: var(--focus-ring-offset);
    border-radius: var(--radius-sm);
  }

  /* -----------------------------------------------------------------
   * Screen Reader Only (Utility)
   * ----------------------------------------------------------------- */

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  /* =================================================================
   * RESPONSIVE STYLES
   * =================================================================
   */

  /* Tablet (640px and up) */
  @media screen and (min-width: 640px) {
    .error-page {
      padding: var(--spacing-12) var(--spacing-6);
    }

    .error-page__actions {
      flex-direction: row;
      justify-content: center;
    }

    .error-page__links-list {
      grid-template-columns: repeat(2, 1fr);
    }

    .error-page__url {
      flex-direction: row;
      gap: var(--spacing-2);
    }
  }

  /* Desktop (768px and up) */
  @media screen and (min-width: 768px) {
    .error-page {
      padding: var(--spacing-16) var(--spacing-8);
    }

    .error-page__heading {
      font-size: var(--font-size-5xl);
