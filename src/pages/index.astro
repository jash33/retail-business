// Service offerings for the homepage
const services: Service[] = [
	{
		id: 'website-design',
		title: 'Website Design',
		description: 'Custom, responsive websites that capture your brand identity and engage your visitors. We create modern designs optimized for all devices and screen sizes.',
		icon: icons.webDesign,
		cta: {
			text: 'Learn More',
			href: '/services/website-design',
		},
	},
	{
		id: 'maintenance',
		title: 'Website Maintenance',
		description: 'Keep your website running smoothly with regular updates, security patches, and performance optimization. Focus on your business while we handle the tech.',
		icon: icons.maintenance,
		cta: {
			text: 'Learn More',
			href: '/services/maintenance',
		},
	},
	{
		id: 'hosting',
		title: 'Web Hosting',
		description: 'Fast, secure, and reliable hosting solutions tailored for small businesses. Enjoy peace of mind with 99.9% uptime and dedicated support.',
		icon: icons.hosting,
		cta: {
			text: 'Learn More',
			href: '/services/hosting',
		},
	},
	{
		id: 'existing-website-support',
		title: 'Existing Website Support',
		description: 'Already have a website built on WordPress, Wix, Squarespace, or another platform? I can help with updates, fixes, and improvements—no matter who built it.',
		icon: icons.existingWebsite,
		cta: {
			text: 'Learn More',
			href: '/services/existing-website-support',
		},
	},
	{
		id: 'business-process-automation',
		title: 'Business Process Automation',
		description: 'Streamline your operations with custom automation solutions. From automated workflows and data syncing to AI-powered tools, we help you save time and reduce manual tasks.',
		icon: icons.automation,
		cta: {
			text: 'Learn More',
			href: '/services/business-process-automation',
		},
	},
];

// Differentiators - unique selling points with first-person messaging
const differentiators: Differentiator[] = [
	{
		id: 'local-expertise',
		title: 'Local Expertise',
		description: 'I live and work right here in  Houston, so I understand our community and what local businesses need to succeed online.',
		icon: differentiatorIcons.localExpertise,
	},
	{
		id: 'transparent-pricing',
		title: 'Transparent Pricing',
		description: "I provide clear, upfront quotes with no hidden fees. You'll know exactly what you're paying for before we start.",
		icon: differentiatorIcons.transparentPricing,
	},
	{
		id: 'fast-turnaround',
		title: 'Fast Turnaround',
		description: 'Most projects are completed within 2-4 weeks. I respect your time and deliver quality work on schedule.',
		icon: differentiatorIcons.fastTurnaround,
	},
	{
		id: 'personalized-service',
		title: 'Personalized Service',
		description: 'You work directly with me—no account managers or middlemen. I tailor every solution to your specific business goals.',
		icon: differentiatorIcons.personalizedService,
	},
];
---

<Layout
	title="Houston Web Services"
	description="Houston web design, hosting, maintenance, and business automation services for small businesses. Custom websites, ongoing support, and solutions to help your local business grow online."
	noTitleTemplate
	openGraph={{
		type: 'website',
	}}
	jsonLd={localBusinessSchema}
>
	<main>
		<!-- Hero Section -->
		<HeroSection
			headline="Websites That Grow Houston Service Businesses."
			valueProposition="Fast-loading, search-friendly websites that turn visitors into customers."
			subheadline="Built by a local expert, not a faceless agency. Custom websites designed to help your Houston business get found online and win more customers."
			primaryCTA={{
				text: "Get Your Free Consultation",
				href: "/contact",
			}}
			secondaryCTA={{
				text: "See How It Works",
				href: "#services",
			}}
			trustBadges={[
				{ icon: 'experience', text: '10+ Years Experience' },
				{ icon: 'projects', text: '50+ Local Businesses Helped' },
				{ icon: 'tech', text: 'Fast & Search-Friendly Sites' },
			]}
		/>

		<!-- Services Section -->
		<ServicesSection
			id="services"
			heading="Our Services"
			subheading="Comprehensive web solutions to help your Houston business thrive online. From design to maintenance, we've got you covered."
			services={services}
			columns={5}
		/>

		<!-- Why Choose Us / Differentiators Section -->
		<DifferentiatorsSection
			id="why-choose-us"
			heading="Why Choose Us"
			subheading="Here's what sets us apart from other web service providers in the Houston area."
			differentiators={differentiators}
		/>

		<!-- Featured Projects Preview Section -->
		<FeaturedProjectsPreview
			id={FEATURED_PROJECTS_CONFIG.id}
			heading={FEATURED_PROJECTS_CONFIG.heading}
			subheading={FEATURED_PROJECTS_CONFIG.subheading}
			projects={FEATURED_PROJECTS}
			viewAllText={FEATURED_PROJECTS_CONFIG.viewAllText}
			viewAllHref={FEATURED_PROJECTS_CONFIG.viewAllHref}
		/>

		<!-- FAQ Section -->
		<FAQAccordion
			items={DEFAULT_FAQ_ITEMS}
			heading="Frequently Asked Questions"
			subheading="Find answers to common questions about our web design services, pricing, and process."
			allowMultiple={false}
			initialExpanded={null}
		/>

		<!-- Contact CTA Section -->
		<ContactCTA
			headline="Ready to Grow Your Business Online?"
			supportingText="Join dozens of successful Houston businesses who trust us to build their digital presence. We've helped local companies throughout Houston increase their online visibility and attract more customers. Let's discuss how we can help your business thrive."
			primaryCTA={{
				text: "Get Your Free Quote",
				href: "/contact",
			}}
			secondaryCTA={{
				text: "Call Us Today",
				href: "tel:+1-832-555-0123",
			}}
		/>
	</main>
</Layout>
