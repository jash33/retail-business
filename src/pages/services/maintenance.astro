    border-color: var(--color-primary);
    border-width: 2px;
  }

  .plan-card__badge {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: var(--color-primary);
    color: var(--color-text-inverse);
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    padding: var(--spacing-1) var(--spacing-4);
    border-radius: var(--radius-full);
  }

  .plan-card__header {
    text-align: center;
    padding-bottom: var(--spacing-6);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--spacing-6);
  }

  .plan-card__name {
    font-family: var(--font-heading);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-2) 0;
  }

  .plan-card__price {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: var(--spacing-1);
    margin-bottom: var(--spacing-3);
  }

  .plan-card__amount {
    font-family: var(--font-heading);
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    line-height: 1;
  }

  .plan-card__period {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
  }

  .plan-card__description {
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: var(--line-height-relaxed);
  }

  .plan-card__features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--spacing-8) 0;
    flex: 1;
  }

  .plan-card__feature {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-3);
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    padding: var(--spacing-2) 0;
    line-height: var(--line-height-relaxed);
  }

  .plan-card__check {
    flex-shrink: 0;
    width: var(--spacing-5);
    height: var(--spacing-5);
    color: var(--color-success);
    margin-top: 2px;
  }

  .plan-card__cta {
    margin-top: auto;
  }

  .plans-section__note {
    text-align: center;
    padding: var(--spacing-6);
    background-color: var(--color-background-elevated);
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-border);
  }

  .plans-section__note p {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: var(--line-height-relaxed);
  }

  .plans-section__note strong {
    color: var(--color-text-primary);
  }

  .plans-section__note a {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .plans-section__note a:hover {
    color: var(--color-primary-hover);
  }

  /* =================================================================
   * FAQ SECTION
   * ================================================================= */

  .faq-section {
    padding: var(--spacing-16) var(--spacing-4);
    background-color: var(--color-background);
  }

  .faq-section__container {
    max-width: var(--container-4xl);
    margin: 0 auto;
  }

  .faq-section__header {
    text-align: center;
    margin-bottom: var(--spacing-10);
  }

  .faq-section__heading {
    font-family: var(--font-heading);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-4) 0;
    line-height: var(--line-height-tight);
  }

  .faq-section__description {
    font-family: var(--font-body);
    font-size: var(--font-size-md);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: var(--line-height-relaxed);
  }

  .faq-section__list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .faq-item {
    background-color: var(--color-background-subtle);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .faq-item__question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-5) var(--spacing-6);
    font-family: var(--font-heading);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    cursor: pointer;
    list-style: none;
    transition: background-color var(--duration-150) var(--ease-in-out);
  }

  .faq-item__question::-webkit-details-marker {
    display: none;
  }

  .faq-item__question::after {
    content: '+';
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-normal);
    color: var(--color-primary);
    transition: transform var(--duration-200) var(--ease-in-out);
  }

  .faq-item[open] .faq-item__question::after {
    transform: rotate(45deg);
  }

  .faq-item__question:hover {
    background-color: var(--color-primary-50);
  }

  .faq-item__answer {
    padding: 0 var(--spacing-6) var(--spacing-5);
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: var(--line-height-relaxed);
  }

