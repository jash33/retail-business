---
/**
 * Contact Page - Main Street Boutique
 * A dedicated page for customer inquiries with a fully validated contact form.
 *
 * Features:
 * - Comprehensive contact form with validation
 * - Spam prevention (honeypot + time-based)
 * - Full accessibility support
 * - SEO optimized with structured data
 * - Store hours, location, and contact details
 */

import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout
  title="Contact Us"
  description="Get in touch with Main Street Boutique. Whether you have questions about our curated artisan goods, need help finding the perfect gift, or want to learn about our products, we'd love to hear from you."
  openGraph={{
    type: 'website',
  }}
  jsonLd={{
    type: 'ContactPage',
    name: 'Contact Main Street Boutique',
    description: 'Contact form for Main Street Boutique - Curated artisan goods and handcrafted products in Springfield, IL.',
  }}
>
  <main>
    <!-- Hero Section -->
    <section class="contact-hero" aria-labelledby="contact-hero-heading">
      <div class="contact-hero__container">
        <h1 id="contact-hero-heading" class="contact-hero__title">
          We'd Love to Hear From You
        </h1>
        <p class="contact-hero__subtitle">
          Whether you have questions about our curated collection, need help finding the perfect gift,
          or want to learn more about our artisan partners, we're here to help.
        </p>
      </div>
    </section>

    <!-- Contact Form Section -->
    <ContactForm />

    <!-- Additional Contact Info -->
    <section class="contact-info" aria-labelledby="contact-info-heading">
      <div class="contact-info__container">
        <h2 id="contact-info-heading" class="sr-only">Alternative Ways to Contact Us</h2>

        <div class="contact-info__grid">
          <!-- Store Hours -->
          <div class="contact-info__card">
            <div class="contact-info__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10" />
                <polyline points="12 6 12 12 16 14" />
              </svg>
            </div>
            <h3 class="contact-info__title">Store Hours</h3>
            <p class="contact-info__text">
              Mon–Fri: 10am – 6pm<br />
              Saturday: 10am – 5pm<br />
              Sunday: Closed
            </p>
          </div>

          <!-- Email -->
          <div class="contact-info__card">
            <div class="contact-info__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                <polyline points="22,6 12,13 2,6" />
              </svg>
            </div>
            <h3 class="contact-info__title">Email Us</h3>
            <p class="contact-info__text">
              <a href="mailto:hello@mainstreetboutique.com" class="contact-info__link">
                hello@mainstreetboutique.com
              </a>
            </p>
          </div>

          <!-- Location -->
          <div class="contact-info__card">
            <div class="contact-info__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                <circle cx="12" cy="10" r="3" />
              </svg>
            </div>
            <h3 class="contact-info__title">Visit Our Store</h3>
            <p class="contact-info__text">
              742 Main Street<br />
              Springfield, IL 62704
            </p>
          </div>

          <!-- Phone -->
          <div class="contact-info__card">
            <div class="contact-info__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
              </svg>
            </div>
            <h3 class="contact-info__title">Call Us</h3>
            <p class="contact-info__text">
              <a href="tel:+15551234567" class="contact-info__link">
                (555) 123-4567
              </a>
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* =================================================================
   * HERO SECTION
   * ================================================================= */
  .contact-hero {
    padding: var(--spacing-20) var(--spacing-4) var(--spacing-12);
    background: linear-gradient(
      135deg,
      var(--color-primary-50) 0%,
      var(--color-background) 100%
    );
    text-align: center;
  }

  .contact-hero__container {
    max-width: var(--container-4xl);
    margin: 0 auto;
  }

  .contact-hero__title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-4);
    letter-spacing: var(--letter-spacing-tight);
  }

  .contact-hero__subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    max-width: 40rem;
    margin: 0 auto;
    line-height: var(--line-height-relaxed);
  }

  /* =================================================================
   * CONTACT INFO SECTION
   * ================================================================= */
  .contact-info {
    padding: var(--spacing-16) var(--spacing-4);
    background-color: var(--color-background);
  }

  .contact-info__container {
    max-width: var(--container-6xl);
    margin: 0 auto;
  }

  .contact-info__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-6);
  }

  @media (min-width: 640px) {
    .contact-info__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .contact-info__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .contact-info__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--spacing-8);
    background-color: var(--color-background-subtle);
    border-radius: var(--radius-xl);
    transition: box-shadow var(--duration-200) var(--ease-in-out);
  }

  .contact-info__card:hover {
    box-shadow: var(--shadow-md);
  }

  .contact-info__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    margin-bottom: var(--spacing-4);
    color: var(--color-primary);
  }

  .contact-info__icon svg {
    width: 100%;
    height: 100%;
  }

  .contact-info__title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-2);
  }

  .contact-info__text {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .contact-info__link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: color var(--duration-150) var(--ease-in-out);
  }

  .contact-info__link:hover {
    color: var(--color-primary-hover);
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }

  /* =================================================================
   * SCREEN READER ONLY
   * ================================================================= */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* =================================================================
   * RESPONSIVE ADJUSTMENTS
   * ================================================================= */
  @media (max-width: 767px) {
    .contact-hero {
      padding: var(--spacing-12) var(--spacing-4) var(--spacing-8);
    }

    .contact-hero__title {
      font-size: var(--font-size-3xl);
    }

    .contact-hero__subtitle {
      font-size: var(--font-size-base);
    }

    .contact-info {
      padding: var(--spacing-12) var(--spacing-4);
    }

    .contact-info__card {
      padding: var(--spacing-6);
    }
  }

  /* =================================================================
   * REDUCED MOTION
   * ================================================================= */
  @media (prefers-reduced-motion: reduce) {
    .contact-info__card {
      transition: none;
    }
  }
</style>
