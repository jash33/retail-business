---
/**
 * Contact Page
 * A dedicated page for user inquiries with a fully validated contact form.
 *
 * Features:
 * - Comprehensive contact form with validation
 * - Spam prevention (honeypot + time-based)
 * - Full accessibility support
 * - SEO optimized with structured data
 */

import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout
  title="Contact Us"
  description="Get in touch with Houston Web Services. We'd love to hear about your project and discuss how we can help your business succeed online."
  openGraph={{
    type: 'website',
  }}
  jsonLd={{
    type: 'ContactPage',
    name: 'Contact Houston Web Services',
    description: 'Contact form for Houston Web Services - Professional web design and development services for small businesses in  Houston.',
  }}
>
  <main>
    <!-- Hero Section -->
    <section class="contact-hero" aria-labelledby="contact-hero-heading">
      <div class="contact-hero__container">
        <h1 id="contact-hero-heading" class="contact-hero__title">
          Let's Build Something Great Together
        </h1>
        <p class="contact-hero__subtitle">
          Whether you're starting from scratch or looking to improve your existing web presence,
          we're here to help. Tell us about your project and let's get started.
        </p>
      </div>
    </section>

    <!-- Contact Form Section -->
    <ContactForm />

    <!-- Additional Contact Info -->
    <section class="contact-info" aria-labelledby="contact-info-heading">
      <div class="contact-info__container">
        <h2 id="contact-info-heading" class="sr-only">Alternative Ways to Contact Us</h2>

        <div class="contact-info__grid">
          <!-- Response Time -->
          <div class="contact-info__card">
            <div class="contact-info__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10" />
                <polyline points="12 6 12 12 16 14" />
              </svg>
            </div>
            <h3 class="contact-info__title">Quick Response</h3>
            <p class="contact-info__text">
              We respond to all inquiries within 24 hours during business days.
            </p>
          </div>

          <!-- Email -->
          <div class="contact-info__card">
            <div class="contact-info__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                <polyline points="22,6 12,13 2,6" />
              </svg>
            </div>
            <h3 class="contact-info__title">Email Us</h3>
            <p class="contact-info__text">
              <a href="mailto:hello@houstonwebservices.com" class="contact-info__link">
                hello@houstonwebservices.com
              </a>
            </p>
          </div>

          <!-- Location -->
          <div class="contact-info__card">
            <div class="contact-info__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                <circle cx="12" cy="10" r="3" />
              </svg>
            </div>
            <h3 class="contact-info__title">Serving</h3>
            <p class="contact-info__text">
               Houston, Energy Corridor, Katy, Memorial, and surrounding areas
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* =================================================================
   * HERO SECTION
   * ================================================================= */
  .contact-hero {
    padding: var(--spacing-20) var(--spacing-4) var(--spacing-12);
    background: linear-gradient(
      135deg,
      var(--color-primary-50) 0%,
      var(--color-background) 100%
    );
    text-align: center;
  }

  .contact-hero__container {
    max-width: var(--container-4xl);
    margin: 0 auto;
  }

  .contact-hero__title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-4);
    letter-spacing: var(--letter-spacing-tight);
  }

  .contact-hero__subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    max-width: 40rem;
    margin: 0 auto;
    line-height: var(--line-height-relaxed);
  }

  /* =================================================================
   * CONTACT INFO SECTION
   * ================================================================= */
  .contact-info {
    padding: var(--spacing-16) var(--spacing-4);
    background-color: var(--color-background);
  }

  .contact-info__container {
    max-width: var(--container-6xl);
    margin: 0 auto;
  }

  .contact-info__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-6);
  }

  @media (min-width: 640px) {
    .contact-info__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .contact-info__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .contact-info__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--spacing-8);
    background-color: var(--color-background-subtle);
    border-radius: var(--radius-xl);
    transition: box-shadow var(--duration-200) var(--ease-in-out);
  }

  .contact-info__card:hover {
    box-shadow: var(--shadow-md);
  }

  .contact-info__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    margin-bottom: var(--spacing-4);
    color: var(--color-primary);
  }

  .contact-info__icon svg {
    width: 100%;
    height: 100%;
  }

  .contact-info__title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-2);
  }

  .contact-info__text {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .contact-info__link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: color var(--duration-150) var(--ease-in-out);
  }

  .contact-info__link:hover {
    color: var(--color-primary-hover);
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }

  /* =================================================================
   * SCREEN READER ONLY
   * ================================================================= */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* =================================================================
   * RESPONSIVE ADJUSTMENTS
   * ================================================================= */
  @media (max-width: 767px) {
    .contact-hero {
      padding: var(--spacing-12) var(--spacing-4) var(--spacing-8);
    }

    .contact-hero__title {
      font-size: var(--font-size-3xl);
    }

    .contact-hero__subtitle {
      font-size: var(--font-size-base);
    }

    .contact-info {
      padding: var(--spacing-12) var(--spacing-4);
    }

    .contact-info__card {
      padding: var(--spacing-6);
    }
  }

  /* =================================================================
   * REDUCED MOTION
   * ================================================================= */
  @media (prefers-reduced-motion: reduce) {
    .contact-info__card {
      transition: none;
    }
  }
</style>
