                </tr>
                <tr>
                  <td><strong>10</strong></td>
                  <td>T 1/2</td>
                  <td>62</td>
                  <td>19.8</td>
                  <td>62.1</td>
                </tr>
              </tbody>
            </table>
          </div>
        </section>

        {/* Bracelet Sizes */}
        <section class="size-guide-modal__section">
          <h3 class="size-guide-modal__section-title">Bracelet Sizes</h3>
          <div class="size-guide-modal__table-container">
            <table class="size-guide-modal__table" aria-label="Bracelet size chart">
              <thead>
                <tr>
                  <th scope="col">Size</th>
                  <th scope="col">Wrist (in)</th>
                  <th scope="col">Wrist (cm)</th>
                  <th scope="col">Bracelet Length</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><strong>XS</strong></td>
                  <td>5.5 - 6.0</td>
                  <td>14 - 15</td>
                  <td>6.5"</td>
                </tr>
