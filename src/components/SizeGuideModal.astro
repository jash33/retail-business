<script>
  /**
   * SizeGuideModal Controller
   * Handles opening, closing, tab navigation, keyboard events, and focus management
   */
  interface SizeGuideOptions {
    category?: 'clothing' | 'jewelry';
  }

  class SizeGuideModal {
    private modal: HTMLElement;
    private previousFocus: HTMLElement | null = null;
    private focusableElements: HTMLElement[] = [];
    private tabs: HTMLButtonElement[] = [];
    private panels: HTMLElement[] = [];
    private defaultTab: string;

    constructor(modalElement: HTMLElement) {
      this.modal = modalElement;
      this.defaultTab = modalElement.dataset.defaultTab || 'clothing';
      this.tabs = Array.from(this.modal.querySelectorAll('[role="tab"]'));
      this.panels = Array.from(this.modal.querySelectorAll('[role="tabpanel"]'));
      this.init();
    }

    private init() {
      // Close button handlers
      this.modal.querySelectorAll('[data-sizeguide-close]').forEach(el => {
        el.addEventListener('click', () => this.close());
      });

      // Tab handlers
      this.tabs.forEach(tab => {
        tab.addEventListener('click', () => this.switchTab(tab.dataset.tab!));
        tab.addEventListener('keydown', (e) => this.handleTabKeydown(e, tab));
      });

      // Keyboard navigation
      document.addEventListener('keydown', (e) => this.handleKeydown(e));

      // Listen for open events
      document.addEventListener('sizeguide:open', ((e: CustomEvent<SizeGuideOptions>) => {
        this.open(e.detail);
      }) as EventListener);

      // Listen for close events
      document.addEventListener('sizeguide:close', () => this.close());

      // Update focusable elements
      this.updateFocusableElements();
    }

    private updateFocusableElements() {
      this.focusableElements = Array.from(
        this.modal.querySelectorAll<HTMLElement>(
          'button:not([disabled]), a[href]:not([disabled]), input:not([disabled]), [tabindex]:not([tabindex="-1"])'
        )
      );
    }

    private handleKeydown(e: KeyboardEvent) {
      if (this.modal.getAttribute('aria-hidden') === 'true') return;

      switch (e.key) {
        case 'Escape':
          e.preventDefault();
          this.close();
          break;
        case 'Tab':
          this.handleTabKey(e);
          break;
      }
    }

    private handleTabKeydown(e: KeyboardEvent, currentTab: HTMLButtonElement) {
      const currentIndex = this.tabs.indexOf(currentTab);
      let newIndex: number;

      switch (e.key) {
        case 'ArrowLeft':
        case 'ArrowUp':
          e.preventDefault();
          newIndex = currentIndex > 0 ? currentIndex - 1 : this.tabs.length - 1;
          this.tabs[newIndex].focus();
          this.switchTab(this.tabs[newIndex].dataset.tab!);
          break;
        case 'ArrowRight':
        case 'ArrowDown':
          e.preventDefault();
          newIndex = currentIndex < this.tabs.length - 1 ? currentIndex + 1 : 0;
          this.tabs[newIndex].focus();
          this.switchTab(this.tabs[newIndex].dataset.tab!);
          break;
        case 'Home':
          e.preventDefault();
          this.tabs[0].focus();
          this.switchTab(this.tabs[0].dataset.tab!);
          break;
        case 'End':
          e.preventDefault();
          this.tabs[this.tabs.length - 1].focus();
          this.switchTab(this.tabs[this.tabs.length - 1].dataset.tab!);
          break;
      }
    }

    private handleTabKey(e: KeyboardEvent) {
      this.updateFocusableElements();

      if (this.focusableElements.length === 0) return;

      const firstElement = this.focusableElements[0];
      const lastElement = this.focusableElements[this.focusableElements.length - 1];

      if (e.shiftKey) {
        // Shift + Tab
        if (document.activeElement === firstElement) {
          e.preventDefault();
          lastElement.focus();
        }
      } else {
        // Tab
        if (document.activeElement === lastElement) {
          e.preventDefault();
          firstElement.focus();
        }
      }
    }

    private switchTab(tabId: string) {
      // Update tabs
      this.tabs.forEach(tab => {
        const isSelected = tab.dataset.tab === tabId;
        tab.setAttribute('aria-selected', isSelected.toString());
        tab.setAttribute('tabindex', isSelected ? '0' : '-1');
      });

      // Update panels
      this.panels.forEach(panel => {
        const isActive = panel.dataset.panel === tabId;
        panel.hidden = !isActive;
      });

      // Update focusable elements after switching
      this.updateFocusableElements();
    }

    public open(options?: SizeGuideOptions) {
      // Store current focus
      this.previousFocus = document.activeElement as HTMLElement;

      // Switch to requested category if provided
      if (options?.category) {
        this.switchTab(options.category);
      } else {
        this.switchTab(this.defaultTab);
      }

      // Show modal
      this.modal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';

      // Focus the close button
      const closeButton = this.modal.querySelector('[data-sizeguide-close]') as HTMLElement;
      setTimeout(() => closeButton?.focus(), 100);

      // Track event
      if (typeof window !== 'undefined' && (window as any).gtag) {
        (window as any).gtag('event', 'size_guide_open', {
          category: options?.category || this.defaultTab,
        });
      }
    }

    public close() {
      this.modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';

      // Restore focus
      this.previousFocus?.focus();

      // Track event
      if (typeof window !== 'undefined' && (window as any).gtag) {
        (window as any).gtag('event', 'size_guide_close');
      }
    }
  }

  function initSizeGuideModal() {
    document.querySelectorAll('[data-size-guide-modal]').forEach(el => {
      if (!(el as any)._sizeGuideInstance) {
        (el as any)._sizeGuideInstance = new SizeGuideModal(el as HTMLElement);
      }
    });
  }

  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSizeGuideModal);
  } else {
    initSizeGuideModal();
  }

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initSizeGuideModal);
</script>
