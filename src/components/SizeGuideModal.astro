                  <td><strong>XL</strong></td>
                  <td>7.5 - 8.0</td>
                  <td>19 - 20</td>
                  <td>8.5"</td>
                </tr>
              </tbody>
            </table>
          </div>
        </section>

        {/* Necklace Lengths */}
        <section class="size-guide-modal__section">
          <h3 class="size-guide-modal__section-title">Necklace Lengths</h3>
          <div class="size-guide-modal__table-container">
            <table class="size-guide-modal__table" aria-label="Necklace length guide">
              <thead>
                <tr>
                  <th scope="col">Style</th>
                  <th scope="col">Length (in)</th>
                  <th scope="col">Length (cm)</th>
                  <th scope="col">Sits At</th>
