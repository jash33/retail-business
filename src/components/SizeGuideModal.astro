---
/**
 * SizeGuideModal Component
 * An accessible modal overlay for displaying size guides with measurement tables,
 * fit recommendations, and conversion charts for clothing and jewelry products.
 *
 * Features:
 * - Tabbed interface for different product categories (clothing/jewelry)
 * - Responsive measurement tables
 * - Size conversion charts (US, EU, UK)
 * - Fit recommendations
 * - How to measure guide
 * - Keyboard navigation (ESC to close, Tab trapping)
 * - Focus management (trap & restore)
 * - Body scroll lock when open
 * - Smooth open/close animations
 * - Full accessibility support (WCAG 2.1 AA)
 * - Reduced motion support
 * - Dark mode support
 *
 * @example Basic usage
 * ```astro
 * <SizeGuideModal id="size-guide-modal" />
 * ```
 *
 * The modal is controlled via JavaScript events:
 * - Dispatch 'sizeguide:open' with optional category to open
 * - Dispatch 'sizeguide:close' to close
 */

interface Props {
  /** Component ID */
  id?: string;
  /** Additional CSS classes */
  class?: string;
  /** Default active tab */
  defaultTab?: 'clothing' | 'jewelry';
}

const {
  id = 'size-guide-modal',
  class: className = '',
  defaultTab = 'clothing',
} = Astro.props;
---

<div
  class={`size-guide-modal ${className}`}
  id={id}
  role="dialog"
  aria-modal="true"
  aria-labelledby="size-guide-title"
  aria-hidden="true"
  data-size-guide-modal
  data-default-tab={defaultTab}
>
  {/* Backdrop */}
  <div class="size-guide-modal__backdrop" data-sizeguide-close></div>

  {/* Main Content */}
  <div class="size-guide-modal__content" role="document">
    {/* Close Button */}
    <button
      class="size-guide-modal__close"
      type="button"
      aria-label="Close size guide"
      data-sizeguide-close
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    {/* Modal Header */}
    <div class="size-guide-modal__header">
      <h2 id="size-guide-title" class="size-guide-modal__title">Size Guide</h2>
      <p class="size-guide-modal__subtitle">Find your perfect fit with our comprehensive sizing information</p>
    </div>

    {/* Tab Navigation */}
    <div class="size-guide-modal__tabs" role="tablist" aria-label="Size guide categories">
      <button
        class="size-guide-modal__tab"
        role="tab"
        aria-selected="true"
        aria-controls="panel-clothing"
        id="tab-clothing"
        data-tab="clothing"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M20.38 3.46L16 2a4 4 0 0 1-8 0L3.62 3.46a2 2 0 0 0-1.34 2.23l.58 3.47a1 1 0 0 0 .99.84H6v10c0 1.1.9 2 2 2h8a2 2 0 0 0 2-2V10h2.15a1 1 0 0 0 .99-.84l.58-3.47a2 2 0 0 0-1.34-2.23z"/>
        </svg>
        <span>Clothing</span>
      </button>
      <button
        class="size-guide-modal__tab"
        role="tab"
        aria-selected="false"
        aria-controls="panel-jewelry"
        id="tab-jewelry"
        data-tab="jewelry"
        tabindex="-1"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="12" cy="12" r="10"/>
          <circle cx="12" cy="12" r="6"/>
          <circle cx="12" cy="12" r="2"/>
