        </section>

        {/* Men's Sizes */}
        <section class="size-guide-modal__section">
          <h3 class="size-guide-modal__section-title">Men's Clothing Sizes</h3>
          <div class="size-guide-modal__table-container">
            <table class="size-guide-modal__table" aria-label="Men's clothing size chart">
              <thead>
