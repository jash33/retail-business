---
/**
 * InstagramCard Component
 * Displays a single Instagram post with image, caption overlay,
 * and interactive hover effects. Supports click to open lightbox.
 *
 * Features:
 * - Responsive square aspect ratio
 * - Caption overlay on hover
 * - Media type indicators (video/carousel)
 * - Engagement metrics display
 * - Smooth hover animations
 * - Full accessibility support
 * - Dark mode support
 *
 * @example Basic usage
 * ```astro
 * <InstagramCard post={instagramPost} />
 * ```
 *
 * @example With caption and metrics
 * ```astro
 * <InstagramCard post={instagramPost} showCaption showMetrics />
 * ```
 */

import type { InstagramPost, InstagramCardProps } from '../types/instagram';
import { truncateCaption, formatCount } from '../utils/instagram';

interface Props extends InstagramCardProps {}

const {
  post,
  size = 'medium',
  showCaption = true,
  showMetrics = false,
  class: className = '',
} = Astro.props;

// Get the display image URL (use thumbnail for videos)
const imageUrl = post.mediaType === 'VIDEO' && post.thumbnailUrl ? post.thumbnailUrl : post.mediaUrl;

// Build CSS classes
const cardClasses = [
  'instagram-card',
  `instagram-card--${size}`,
  showCaption && 'instagram-card--has-caption',
  className,
].filter(Boolean).join(' ');

// Truncate caption for display
const displayCaption = post.caption ? truncateCaption(post.caption, 100) : '';
---

<article
  class={cardClasses}
  data-instagram-card
  data-post-id={post.id}
  data-permalink={post.permalink}
>
  <a
    href={post.permalink}
    class="instagram-card__link"
    target="_blank"
    rel="noopener noreferrer"
    aria-label={post.altText || `View Instagram post`}
    data-lightbox-trigger
  >
    {/* Image Container */}
    <div class="instagram-card__image-container">
      <img
        src={imageUrl}
        alt={post.altText || 'Instagram post'}
        class="instagram-card__image"
        loading="lazy"
        decoding="async"
      />

      {/* Media Type Indicator */}
      {post.mediaType === 'VIDEO' && (
        <div class="instagram-card__media-type" aria-label="Video">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="instagram-card__icon"
            aria-hidden="true"
          >
            <path d="M8 5v14l11-7z" />
          </svg>
        </div>
      )}

      {post.mediaType === 'CAROUSEL_ALBUM' && (
        <div class="instagram-card__media-type" aria-label="Multiple images">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="instagram-card__icon"
            aria-hidden="true"
          >
            <path d="M4 6H2v14c0 1.1.9 2 2 2h14v-2H4V6zm16-4H8c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H8V4h12v12z" />
          </svg>
        </div>
      )}

      {/* Hover Overlay */}
      <div class="instagram-card__overlay">
        {/* Caption */}
        {showCaption && displayCaption && (
          <p class="instagram-card__caption">{displayCaption}</p>
        )}

        {/* Engagement Metrics */}
        {showMetrics && (post.likeCount !== undefined || post.commentsCount !== undefined) && (
          <div class="instagram-card__metrics">
            {post.likeCount !== undefined && (
              <span class="instagram-card__metric">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="instagram-card__metric-icon"
                  aria-hidden="true"
                >
                  <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
                </svg>
                <span class="instagram-card__metric-value">{formatCount(post.likeCount)}</span>
              </span>
            )}
            {post.commentsCount !== undefined && (
              <span class="instagram-card__metric">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="instagram-card__metric-icon"
                  aria-hidden="true"
                >
                  <path d="M21.99 4c0-1.1-.89-2-1.99-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h14l4 4-.01-18z" />
                </svg>
                <span class="instagram-card__metric-value">{formatCount(post.commentsCount)}</span>
              </span>
            )}
          </div>
        )}

        {/* Instagram Icon */}
        <div class="instagram-card__instagram-icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            aria-hidden="true"
          >
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
          </svg>
        </div>
      </div>
    </div>
  </a>
</article>

<style>
  /* =================================================================
   * INSTAGRAM CARD COMPONENT STYLES
   * ================================================================= */

  .instagram-card {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: var(--radius-md);
    background-color: var(--color-background-muted);
  }

  .instagram-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .instagram-card__link:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    border-radius: var(--radius-md);
  }

  /* =================================================================
   * IMAGE CONTAINER
   * ================================================================= */

  .instagram-card__image-container {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
  }

  .instagram-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-300) var(--ease-out);
  }

  .instagram-card:hover .instagram-card__image {
    transform: scale(1.05);
  }

  /* =================================================================
   * MEDIA TYPE INDICATOR
   * ================================================================= */

  .instagram-card__media-type {
    position: absolute;
    top: var(--spacing-3);
    right: var(--spacing-3);
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.6);
    border-radius: var(--radius-sm);
    color: white;
    z-index: 2;
  }

  .instagram-card__icon {
    width: 14px;
    height: 14px;
  }

  /* =================================================================
   * HOVER OVERLAY
   * ================================================================= */

  .instagram-card__overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: var(--spacing-4);
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      transparent 100%
    );
    opacity: 0;
    transition: opacity var(--duration-200) var(--ease-out);
    z-index: 1;
  }

  .instagram-card:hover .instagram-card__overlay,
  .instagram-card:focus-within .instagram-card__overlay {
    opacity: 1;
  }

  /* =================================================================
   * CAPTION
   * ================================================================= */

  .instagram-card__caption {
    margin: 0 0 var(--spacing-2);
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-snug);
    color: white;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* =================================================================
   * ENGAGEMENT METRICS
   * ================================================================= */

  .instagram-card__metrics {
    display: flex;
    gap: var(--spacing-4);
    margin-top: var(--spacing-2);
  }

  .instagram-card__metric {
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
    color: white;
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  .instagram-card__metric-icon {
    width: 16px;
    height: 16px;
  }

  /* =================================================================
   * INSTAGRAM ICON (shown on hover)
   * ================================================================= */

  .instagram-card__instagram-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.8);
    width: 48px;
    height: 48px;
    color: white;
    opacity: 0;
    transition:
      opacity var(--duration-200) var(--ease-out),
      transform var(--duration-200) var(--ease-out);
  }

  .instagram-card:hover .instagram-card__instagram-icon {
    opacity: 0.9;
    transform: translate(-50%, -50%) scale(1);
  }

  .instagram-card__instagram-icon svg {
    width: 100%;
    height: 100%;
  }

  /* =================================================================
   * SIZE VARIANTS
   * ================================================================= */

  .instagram-card--small .instagram-card__overlay {
    padding: var(--spacing-2);
  }

  .instagram-card--small .instagram-card__caption {
    font-size: var(--font-size-xs);
    -webkit-line-clamp: 2;
  }

  .instagram-card--small .instagram-card__instagram-icon {
    width: 32px;
    height: 32px;
  }

  .instagram-card--large .instagram-card__overlay {
    padding: var(--spacing-6);
  }

  .instagram-card--large .instagram-card__caption {
    font-size: var(--font-size-base);
    -webkit-line-clamp: 4;
  }

  .instagram-card--large .instagram-card__instagram-icon {
    width: 64px;
    height: 64px;
  }

  /* =================================================================
   * LOADING STATE
   * ================================================================= */

  .instagram-card--loading .instagram-card__image-container {
    background: linear-gradient(
      90deg,
      var(--color-background-muted) 0%,
      var(--color-background-elevated) 50%,
      var(--color-background-muted) 100%
    );
    background-size: 200% 100%;
    animation: skeleton-pulse 1.5s ease-in-out infinite;
  }

  @keyframes skeleton-pulse {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

  /* =================================================================
   * REDUCED MOTION
   * ================================================================= */

  @media (prefers-reduced-motion: reduce) {
    .instagram-card__image,
    .instagram-card__overlay,
    .instagram-card__instagram-icon {
      transition: none;
    }

    .instagram-card:hover .instagram-card__image {
      transform: none;
    }

    .instagram-card:hover .instagram-card__instagram-icon {
      transform: translate(-50%, -50%);
    }

    .instagram-card--loading .instagram-card__image-container {
      animation: none;
    }
  }

  /* =================================================================
   * DARK MODE
   * ================================================================= */

  :global(html[data-theme="dark"]) .instagram-card {
    background-color: var(--color-background-elevated);
  }

  /* =================================================================
   * PRINT STYLES
   * ================================================================= */

  @media print {
    .instagram-card__overlay {
      display: none;
    }

    .instagram-card__media-type {
      display: none;
    }
  }
</style>
