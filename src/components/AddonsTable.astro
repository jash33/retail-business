---
/**
 * AddonsTable Component
 * A structured table component for displaying optional add-on services
 * with pricing and descriptions.
 *
 * Features:
 * - Clean table layout for add-on services
 * - Clear pricing display for each add-on
 * - Brief descriptions for each service
 * - Responsive design with card layout on mobile
 * - Accessibility support with proper table semantics
 *
 * @example Basic usage
 * ```astro
 * <AddonsTable
 *   addons={[
 *     {
 *       name: "Monthly Maintenance",
 *       price: "$99/mo",
 *       description: "Regular updates, backups, and security monitoring."
 *     },
 *     ...
 *   ]}
 * />
 * ```
 */

export interface Addon {
  /** Name of the add-on service */
  name: string;
  /** Price display (e.g., "$99/mo", "$250", "From $150") */
  price: string;
  /** Brief description of what this add-on includes */
  description: string;
  /** Optional note (e.g., "Recommended", "Popular") */
  note?: string;
}

export interface AddonsTableProps {
  /** List of add-on services to display */
  addons: Addon[];
  /** Section heading */
  heading?: string;
  /** Section subheading/description */
  subheading?: string;
  /** Additional CSS classes */
  class?: string;
}

interface Props extends AddonsTableProps {}

const {
  addons,
  heading = 'Add-On Services',
  subheading = 'Enhance your project with these optional services.',
  class: className = '',
} = Astro.props;

const sectionClasses = [
  'addons-section',
  className,
].filter(Boolean).join(' ');
---

<section class={sectionClasses}>
  <header class="addons-section__header">
    <h2 class="addons-section__heading">{heading}</h2>
    {subheading && <p class="addons-section__subheading">{subheading}</p>}
  </header>

  <!-- Desktop Table View -->
  <div class="addons-table-wrapper" role="region" aria-label="Add-on services pricing table">
    <table class="addons-table">
      <thead class="addons-table__head">
        <tr>
          <th scope="col" class="addons-table__th addons-table__th--service">Service</th>
          <th scope="col" class="addons-table__th addons-table__th--price">Price</th>
          <th scope="col" class="addons-table__th addons-table__th--description">Description</th>
        </tr>
      </thead>
      <tbody class="addons-table__body">
        {addons.map((addon, index) => (
          <tr class="addons-table__row" style={`--row-index: ${index}`}>
            <td class="addons-table__td addons-table__td--service">
              <span class="addons-table__service-name">{addon.name}</span>
              {addon.note && <span class="addons-table__note">{addon.note}</span>}
            </td>
            <td class="addons-table__td addons-table__td--price">
              <span class="addons-table__price">{addon.price}</span>
            </td>
            <td class="addons-table__td addons-table__td--description">
              {addon.description}
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>

  <!-- Mobile Card View -->
  <div class="addons-cards" role="list">
    {addons.map((addon, index) => (
      <article class="addon-card" role="listitem" style={`--card-index: ${index}`}>
        <div class="addon-card__header">
          <h3 class="addon-card__name">{addon.name}</h3>
          {addon.note && <span class="addon-card__note">{addon.note}</span>}
        </div>
        <p class="addon-card__price">{addon.price}</p>
        <p class="addon-card__description">{addon.description}</p>
      </article>
    ))}
  </div>
</section>

<style>
  /* =================================================================
   * ADDONS TABLE COMPONENT STYLES
   * =================================================================
   * Uses design system variables from variables.css
   * Follows BEM naming convention for maintainability
   */

  .addons-section {
    width: 100%;
  }

  /* Section Header */
  .addons-section__header {
    text-align: center;
    margin-bottom: var(--spacing-8);
  }

  .addons-section__heading {
    font-family: var(--font-heading);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-3) 0;
    line-height: var(--line-height-tight);
  }

  .addons-section__subheading {
    font-family: var(--font-body);
    font-size: var(--font-size-md);
    color: var(--color-text-secondary);
    margin: 0;
    max-width: 60ch;
    margin-left: auto;
    margin-right: auto;
    line-height: var(--line-height-relaxed);
  }

  /* =================================================================
   * TABLE STYLES (Desktop)
   * ================================================================= */

  .addons-table-wrapper {
    display: none;
    overflow-x: auto;
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-border);
    background-color: var(--color-background-elevated);
    box-shadow: var(--shadow-sm);
  }

  .addons-table {
    width: 100%;
    border-collapse: collapse;
    font-family: var(--font-body);
  }

  .addons-table__head {
    background-color: var(--color-background-muted);
  }

  .addons-table__th {
    padding: var(--spacing-4) var(--spacing-6);
    text-align: left;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-tertiary);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wider);
    border-bottom: 2px solid var(--color-border);
  }

  .addons-table__th--price {
    text-align: right;
    width: 120px;
  }

  .addons-table__th--description {
    width: 50%;
  }

  .addons-table__row {
    transition: background-color var(--duration-150) var(--ease-in-out);
    animation: fadeInRow 0.4s ease-out calc(var(--row-index) * 0.05s) backwards;
  }

  .addons-table__row:hover {
    background-color: var(--color-background-subtle);
  }

  .addons-table__td {
    padding: var(--spacing-5) var(--spacing-6);
    border-bottom: 1px solid var(--color-border-light);
    vertical-align: middle;
  }

  .addons-table__row:last-child .addons-table__td {
    border-bottom: none;
  }

  .addons-table__td--service {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
  }

  .addons-table__service-name {
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
  }

  .addons-table__note {
    display: inline-block;
    padding: var(--spacing-0-5) var(--spacing-2);
    background-color: var(--color-primary-50);
    color: var(--color-primary);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-full);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .addons-table__td--price {
    text-align: right;
  }

  .addons-table__price {
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    font-size: var(--font-size-md);
  }

  .addons-table__td--description {
    color: var(--color-text-secondary);
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
  }

  /* =================================================================
   * CARD STYLES (Mobile)
   * ================================================================= */

  .addons-cards {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .addon-card {
    background-color: var(--color-background-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--spacing-5);
    box-shadow: var(--shadow-sm);
    animation: fadeInCard 0.4s ease-out calc(var(--card-index) * 0.1s) backwards;
    transition:
      box-shadow var(--duration-200) var(--ease-in-out),
      border-color var(--duration-200) var(--ease-in-out);
  }

  .addon-card:hover {
    box-shadow: var(--shadow-md);
    border-color: var(--color-primary-200);
  }

  .addon-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-3);
    margin-bottom: var(--spacing-2);
  }

  .addon-card__name {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0;
    line-height: var(--line-height-tight);
  }

  .addon-card__note {
    display: inline-block;
    padding: var(--spacing-0-5) var(--spacing-2);
    background-color: var(--color-primary-50);
    color: var(--color-primary);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-full);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    flex-shrink: 0;
  }

  .addon-card__price {
    font-family: var(--font-heading);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    margin: 0 0 var(--spacing-3) 0;
  }

  .addon-card__description {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  /* =================================================================
   * ANIMATIONS
   * ================================================================= */

  @keyframes fadeInRow {
    from {
      opacity: 0;
      transform: translateY(8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInCard {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* =================================================================
   * RESPONSIVE STYLES
   * ================================================================= */

  /* Tablet and up (768px) - Show table, hide cards */
  @media screen and (min-width: 768px) {
    .addons-section__heading {
      font-size: var(--font-size-3xl);
    }

    .addons-table-wrapper {
      display: block;
    }

    .addons-cards {
      display: none;
    }
  }

  /* =================================================================
   * REDUCED MOTION
   * ================================================================= */

  @media (prefers-reduced-motion: reduce) {
    .addons-table__row,
    .addon-card {
      animation: none;
      transition: none;
    }

    .addon-card:hover {
      box-shadow: var(--shadow-sm);
    }
  }

  /* =================================================================
   * HIGH CONTRAST MODE
   * ================================================================= */

  @media (forced-colors: active) {
    .addons-table-wrapper,
    .addon-card {
      border: 2px solid CanvasText;
    }

    .addons-table__th {
      border-bottom: 2px solid CanvasText;
    }

    .addons-table__td {
      border-bottom: 1px solid CanvasText;
    }

    .addons-table__note,
    .addon-card__note {
      border: 1px solid CanvasText;
    }
  }

  /* =================================================================
   * PRINT STYLES
   * ================================================================= */

  @media print {
    .addons-table-wrapper {
      display: block;
      box-shadow: none;
    }

    .addons-cards {
      display: none;
    }

    .addons-table__row:hover {
      background-color: transparent;
    }

    .addons-table__row,
    .addon-card {
      animation: none;
    }
  }
</style>
