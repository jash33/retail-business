---
/**
 * InstagramFeed Section Component
 * A complete Instagram feed section with heading, grid, lightbox,
 * and follow button. Fetches posts from configured provider.
 *
 * Features:
 * - Auto-fetches posts based on configuration
 * - Section heading and subheading
 * - Responsive grid layout
 * - Integrated lightbox viewer
 * - Follow button with Instagram link
 * - Loading and error states
 * - Full accessibility support
 * - Dark mode support
 *
 * @example Basic usage
 * ```astro
 * <InstagramFeed />
 * ```
 *
 * @example With custom heading
 * ```astro
 * <InstagramFeed
 *   heading="Our Instagram"
 *   subheading="Follow along for updates"
 *   postCount={6}
 *   columns={3}
 * />
 * ```
 */

import type { InstagramFeedProps, InstagramPost } from '../types/instagram';
import { fetchInstagramFeed } from '../utils/instagram';
import {
  isInstagramEnabled,
  getInstagramProfileUrl,
  instagramConfig,
  DEFAULT_SECTION_OPTIONS,
  DEFAULT_GRID_OPTIONS,
} from '../config/instagram.config';
import InstagramGrid from './InstagramGrid.astro';
import InstagramLightbox from './InstagramLightbox.astro';

interface Props extends InstagramFeedProps {}

const {
  heading = DEFAULT_SECTION_OPTIONS.heading,
  subheading = DEFAULT_SECTION_OPTIONS.subheading,
  postCount = instagramConfig.maxPosts,
  columns = DEFAULT_GRID_OPTIONS.columns,
  gap = DEFAULT_GRID_OPTIONS.gap,
  enableLightbox = DEFAULT_GRID_OPTIONS.enableLightbox,
  showFollowButton = DEFAULT_SECTION_OPTIONS.showFollowButton,
  profileUrl,
  id = 'instagram-feed',
  class: className = '',
} = Astro.props;

// Check if Instagram is enabled
const isEnabled = isInstagramEnabled();

// Fetch Instagram posts
let posts: InstagramPost[] = [];
let error: string | undefined;
let isLoading = false;

if (isEnabled) {
  try {
    const feedData = await fetchInstagramFeed({ maxPosts: postCount });

    if (feedData.state === 'success') {
      posts = feedData.posts;
    } else if (feedData.state === 'error') {
      error = feedData.error;
    }
  } catch (e) {
    error = e instanceof Error ? e.message : 'Failed to load Instagram feed';
  }
}

// Get profile URL
const instagramProfileUrl = profileUrl || getInstagramProfileUrl();

// Build CSS classes
const sectionClasses = [
  'instagram-feed',
  className,
].filter(Boolean).join(' ');
---

{isEnabled && (
  <section
    class={sectionClasses}
    id={id}
    aria-labelledby={heading ? `${id}-heading` : undefined}
  >
    {/* Section Header */}
    {(heading || subheading) && (
      <header class="instagram-feed__header">
        {heading && (
          <h2 id={`${id}-heading`} class="instagram-feed__heading">
            <svg
              class="instagram-feed__heading-icon"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              aria-hidden="true"
            >
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            {heading}
          </h2>
        )}
        {subheading && (
          <p class="instagram-feed__subheading">{subheading}</p>
        )}
      </header>
    )}

    {/* Instagram Grid */}
    <InstagramGrid
      posts={posts}
      columns={columns}
      gap={gap}
      enableLightbox={enableLightbox}
      enableAnimation={DEFAULT_GRID_OPTIONS.enableAnimation}
      isLoading={isLoading}
      error={error}
      id={`${id}-grid`}
    />

    {/* Lightbox (only if enabled and posts exist) */}
    {enableLightbox && posts.length > 0 && (
      <InstagramLightbox posts={posts} id={`${id}-lightbox`} />
    )}

    {/* Follow Button */}
    {showFollowButton && instagramProfileUrl && !error && (
      <footer class="instagram-feed__footer">
        <a
          href={instagramProfileUrl}
          class="instagram-feed__follow-button"
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`Follow us on Instagram${instagramConfig.username ? ` @${instagramConfig.username}` : ''}`}
        >
          <svg
            class="instagram-feed__follow-icon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            aria-hidden="true"
          >
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          Follow on Instagram
          {instagramConfig.username && (
            <span class="instagram-feed__username">@{instagramConfig.username}</span>
          )}
        </a>
      </footer>
    )}
  </section>
)}

<style>
  /* =================================================================
   * INSTAGRAM FEED SECTION STYLES
   * ================================================================= */

  .instagram-feed {
    width: 100%;
    padding: var(--spacing-12) 0;
  }

  /* =================================================================
   * SECTION HEADER
   * ================================================================= */

  .instagram-feed__header {
    text-align: center;
    margin-bottom: var(--spacing-8);
  }

  .instagram-feed__heading {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-3);
    font-family: var(--font-heading);
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-4);
    line-height: var(--line-height-tight);
  }

  .instagram-feed__heading-icon {
    width: 32px;
    height: 32px;
    color: #E1306C; /* Instagram brand color */
  }

  .instagram-feed__subheading {
    font-family: var(--font-body);
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin: 0;
    max-width: 42rem;
    margin-left: auto;
    margin-right: auto;
    line-height: var(--line-height-relaxed);
  }

  /* =================================================================
   * SECTION FOOTER
   * ================================================================= */

  .instagram-feed__footer {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-8);
  }

  .instagram-feed__follow-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-3) var(--spacing-6);
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: white;
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    border-radius: var(--radius-full);
    text-decoration: none;
    transition:
      transform var(--duration-200) var(--ease-out),
      box-shadow var(--duration-200) var(--ease-out);
  }

  .instagram-feed__follow-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(225, 48, 108, 0.4);
  }

  .instagram-feed__follow-button:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .instagram-feed__follow-icon {
    width: 20px;
    height: 20px;
  }

  .instagram-feed__username {
    opacity: 0.9;
    font-weight: var(--font-weight-normal);
  }

  /* =================================================================
   * RESPONSIVE STYLES
   * ================================================================= */

  @media screen and (max-width: 767px) {
    .instagram-feed {
      padding: var(--spacing-8) 0;
    }

    .instagram-feed__heading {
      font-size: var(--font-size-2xl);
    }

    .instagram-feed__heading-icon {
      width: 24px;
      height: 24px;
    }

    .instagram-feed__subheading {
      font-size: var(--font-size-base);
    }

    .instagram-feed__footer {
      margin-top: var(--spacing-6);
    }

    .instagram-feed__follow-button {
      padding: var(--spacing-2) var(--spacing-4);
      font-size: var(--font-size-sm);
    }

    .instagram-feed__username {
      display: none;
    }
  }

  /* =================================================================
   * REDUCED MOTION
   * ================================================================= */

  @media (prefers-reduced-motion: reduce) {
    .instagram-feed__follow-button {
      transition: none;
    }

    .instagram-feed__follow-button:hover {
      transform: none;
    }
  }

  /* =================================================================
   * DARK MODE
   * ================================================================= */

  :global(html[data-theme="dark"]) .instagram-feed__heading-icon {
    color: #E1306C;
  }

  /* =================================================================
   * PRINT STYLES
   * ================================================================= */

  @media print {
    .instagram-feed {
      padding: var(--spacing-4) 0;
    }

    .instagram-feed__follow-button {
      display: none;
    }
  }
</style>
